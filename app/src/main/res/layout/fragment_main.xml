<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MainFragment"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/sousuo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="搜歌曲、歌星"
        android:textSize="26sp"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/fadanmu"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:text="."
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_fadanmu_backgruond"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sousuo"/>


    <Button
        android:id="@+id/fazhufu"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:text="发祝福"
        android:textSize="25sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sousuo"/>

    <Button
        android:id="@+id/gequfenlei"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="歌曲分类"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/fadanmu"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/gexing"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:text="歌星"
        android:textSize="30sp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fadanmu"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/gequfenlei"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <GridView
            android:id="@+id/gequ_mingdan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:paddingVertical="10dp"
            android:listSelector="@color/white"
            />
        <ListView
            android:id="@+id/gexing_mingdan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>