<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sousuo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="搜索"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/fadanmu"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:text="发弹幕"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sousuo"/>





    <Button
        android:id="@+id/fazhufu"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:text="发祝福"
        android:textSize="25sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sousuo"/>

    <Button
        android:id="@+id/gequfenlei"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="歌曲分类"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/fadanmu"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/gexing"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="歌星"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/fadanmu"
        app:layout_constraintStart_toEndOf="@id/gequfenlei"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/gequfenlei"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <GridView
            android:id="@+id/gequ_mingdan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:paddingVertical="10dp"
            android:visibility="gone"
            />
        <ListView
            android:id="@+id/gexing_mingdan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <Button
        android:id="@+id/yaokong"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:background="@drawable/yaokong"
        android:backgroundTint="@color/white"
        android:text="."
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遥控"
        android:textSize="21sp"
        android:paddingHorizontal="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/yaokong"
        app:layout_constraintStart_toStartOf="@id/yaokong"/>

    <Button
        android:id="@+id/diange"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="."
        android:background="@drawable/diange"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点歌"
        android:textSize="21sp"
        android:paddingHorizontal="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/diange"
        app:layout_constraintStart_toStartOf="@id/diange"/>
</androidx.constraintlayout.widget.ConstraintLayout>