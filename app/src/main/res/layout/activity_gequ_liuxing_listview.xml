<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/gequ_liuxing_listview_geming"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="歌名"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/gequ_liuxing_listview_geshou"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="歌手"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:textColor="#919191"
        app:layout_constraintTop_toBottomOf="@id/gequ_liuxing_listview_geming"
        app:layout_constraintStart_toStartOf="@id/gequ_liuxing_listview_geming"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/gequ_liuxing_listview_diange"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="点歌"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/gequ_liuxing_listview_geming"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        android:focusable="false"
        android:background="@drawable/diangebuttonshape"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>