<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FazhufuActivity">

    <Button
        android:id="@+id/fazhufu_exit"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fanhui"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <VideoView
        android:id="@+id/shipin"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/fanhui"
        />

    <Button
        android:id="@+id/fanhui"
        android:background="@drawable/fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/fabiao"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="请发表祝福"
        android:textSize="38sp"
        app:layout_constraintTop_toBottomOf="@+id/shipin"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/fabianzhufu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/fanzhufu_et"
        android:textColor="@color/black"
        android:hint="请输入祝福内容"
        app:layout_constraintTop_toBottomOf="@+id/fabiao"
        />
    <Button
        android:text="发表"
        android:textColor="#fff"
        android:textSize="30dp"
        android:background="@drawable/fanzhufu_btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabianzhufu"/>
</androidx.constraintlayout.widget.ConstraintLayout>